
<div ng-controller="cartController" ng-class="{false: 'show', true: 'hide'}[show()]">
  <span>
    <button class="align-right" ng-click="updateShow()">Return to Browse</button>
  </span>

  <div ng-show="cartContents.length > 0">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Quantity</th>
          <th>Price per Unit</th>
          <th>Cost</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="item in cartContents">
          <td>{{ item.name }}</td>
          <td>{{ item.cartCounter }}</td>
          <td>${{ item.price }}</td>
          <td>${{ item.cost }}</td>
          <td><button ng-click="removeItem(item)" class="remove-from-order">Remove Item</button></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td>Net Price:</td>
          <td>${{ totalPrice() }}</td>
          <td><button ng-click="checkout(); showForm=true" class="checkout">Checkout</button></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div ng-show="showForm">
    <form class="form-horizontal" ng-class="{true: 'hide', false: 'show'}[hideForm]">
      <div class="form-group">
        <label for="inputName" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-8">
          <input type="Name" class="form-control" id="inputName" placeholder="Name" ng-model="orderName">
        </div>
      </div>
      <div class="form-group">
        <label for="order-comments" class="col-sm-2 control-label">Comments</label>
        <div class="col-sm-8">
          <input type="text" id="order-comments" class="form-control" placeholder="Comments" ng-model=" orderComments">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <button ng-click="submitOrder()">Place Order</button>
        </div>
      </div>
    </form>
  </div>
    

  <div ng-show="cartContents.length == 0">
    <div class='text-center'>
      <h4>Your cart is empty.
      </h4>
    </div>
  </div>

</div>