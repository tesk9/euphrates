var app = angular.module('euphrates', ['ngRoute', 'ngResource']);

app.config(function($routeProvider) {
  $routeProvider
    .when("/", { 
      templateUrl: '<%= asset_path("items/_listItems.html.erb") %>',
      controller: "itemsCtlr" 
    })
    .when("/cart", { 
      templateUrl: '<%= asset_path("cart/_orders.html.erb") %>',
      controller: "cartController"
    })
    .when("/pastorders", {
      templateUrl: '<%= asset_path("orders/_reviewOrders.html.erb") %>',
      controller: "orderController"
    })
    .otherwise({
      redirectTo: "/"
    });
})