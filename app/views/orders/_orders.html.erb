<div class="hide">
  <span><button class="align-right" ng-click="showList=updateShowList">Return to Browse{{ cartContents.length }}</button></span>
</div>

<div ng-controller="cartController" ng-class="{false: 'show', true: 'hide'}[showList()]">

  <div ng-show="cartContents.length > 0">
    <%= render "orders/cartItems" %>
  </div>

  <div ng-show="cartContents.length == 0">
    <div class='text-center'>
      <h4>Your cart is empty.
      </h4>
    </div>
  </div>

</div>